<%-include('header') -%>

<section class="main">
    <div class="container py-5 h-100 sub-cl">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div
            class="card bg-white bg-opacity-10 text-white card-sec"
            style="border-radius: 1rem"
          >
            <div class="card-body p-5 text-center">
              <div class="mt-md-4">
               
                <h2 class="fw-bold mb-4 text-uppercase ">Login</h2>
                <% if(locals.msg) {%>
                  <div id="errorDiv" class="alert alert-danger">
                    <strong><%=msg%>
                    </strong>
                  </div>
                <%}%>
                
                <form action="/login" method="POST">
                  <div class="form-outline form-primary mb-4">
                    <input
                      name="email"
                      type="email"
                      id="typeEmailX"
                      class="form-control form-control-lg"
                      placeholder="Email"
                      required
                    />
                  </div>
  
                  <div class="form-outline form-white mb-4 ">
                    <input
                    name="password"
                      type="password"
                      id="typePasswordX"
                      class="form-control form-control-lg"
                      placeholder="Password"
                      required
                    />
                  </div>
                  <br />
                  <button class="btn btn-outline-light btn-lg px-5 b1" type="submit">
                    Login
                  </button>
                  <a href="/signup" class="no-under">
                    <button class="btn btn-outline-light btn-lg px-5 b2" type="button" >
                      Signup
                    </button>
                  </a>
                      <div class="b3">
                    <a class=" text-light " href="/adminhome">  
                      Admin login
                  </a>
                </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>


<%-include('footer')-%>